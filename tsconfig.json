{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "downlevelIteration": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
        "@api/*": ["src/app/api/*"],
        "@smc/pages": ["src/app/pages/index"],
        "@smc/pages/*": ["src/app/pages/*"],
        "@smc/modules": ["src/app/core"],
        "@smc/modules/*": ["src/app/core/*"],
        "@node_modules/*": ["node_modules/*"],
    }
  }
}
